{
  "name": "personal-site",
  "version": "1.0.0",
  "description": "My humble personal homepage, made with a tiny bit but not much care.",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:js && npm run test:scss && npm run test:html",
    "test:js": "eslint *.js",
    "test:js:fix": "eslint *.js --fix",
    "test:scss": "sass-lint scss/{*,**/*}.scss --verbose --no-exit --config .sasslintrc",
    "test:scss:fix": "sass-lint-auto-fix \"scss/{*,**/*}.scss\"",
    "test:html": "linthtml templates/*.html",
    "build": "npm run build:scss && npm run build:js && npm run build:html && npm run build:static && npm run build:images && npm run build:print",
    "build:scss": "parcel build scss/{*,themes/*}.scss --out-dir build/css --public-url ./",
    "build:js": "parcel build js/{*,themes/*}.js --out-dir build/js --public-url ./",
    "build:html": "npm run build:html:posthtml && npm run build:html:minify",
    "build:html:posthtml": "node index.js",
    "build:html:minify": "html-minifier build/index.html -c .htmlminrc -o build/index.html",
    "build:static": "copyfiles --up 1 static/{*,**/*} build",
    "build:images": "node images/main.js",
    "build:print": "npm run build:print:html && npm run build:print:export && npm run build:print:clean",
    "build:print:html": "SITE_ENV=print node index.js",
    "build:print:export": "node print.js",
    "build:print:clean": "rm build/print.html",
    "dev": "nodemon -e html,js,scss,yaml --watch templates --watch js --watch scss --watch images --watch data --exec \"npm run build && npm run dev:serve\"",
    "dev:serve": "http-server build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MattIPv4/Personal-Site.git"
  },
  "author": "Matt (IPv4) Cowley",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/MattIPv4/Personal-Site/issues"
  },
  "homepage": "https://github.com/MattIPv4/Personal-Site#readme",
  "devDependencies": {
    "@linthtml/linthtml": "^0.8.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.31.0",
    "html-minifier": "^4.0.0",
    "html5-to-pdf": "^4.0.1",
    "http-server": "^0.12.3",
    "markdown-it": "^12.3.2",
    "nodemon": "^2.0.12",
    "parcel-bundler": "^1.12.5",
    "posthtml": "^0.16.4",
    "posthtml-expressions": "^1.7.1",
    "posthtml-include": "^1.7.1",
    "posthtml-style-expansion": "^0.2.0",
    "sass": "^1.35.2",
    "sass-lint": "^1.13.1",
    "sass-lint-auto-fix": "^0.21.2",
    "sharp": "^0.28.3",
    "yaml": "^1.10.2"
  }
}
