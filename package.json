{
  "name": "personal-site",
  "version": "1.0.0",
  "description": "My humble personal homepage, made with a tiny bit but not much care.",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:js && npm run test:scss && npm run test:html",
    "test:js": "eslint *.js",
    "test:js:fix": "npm run test:js -- --fix",
    "test:scss": "stylelint \"scss/{*,**/*}.scss\"",
    "test:scss:fix": "npm run test:scss -- --fix",
    "test:html": "linthtml templates/*.html",
    "build": "npm run build:bundle && npm run build:static && npm run build:images && npm run build:print",
    "build:bundle": "node index.js",
    "build:static": "copyfiles --up 1 static/{*,**/*} build",
    "build:images": "node images/main.js",
    "build:print": "npm run build:print:bundle && npm run build:print:export && npm run build:print:clean",
    "build:print:bundle": "SITE_ENV=print npm run build:bundle",
    "build:print:export": "node print.js",
    "build:print:clean": "rm build/print.html",
    "dev": "nodemon -e html,js,scss,yaml --watch templates --watch js --watch scss --watch images --watch data --exec \"npm run build && npm run dev:serve\"",
    "dev:serve": "http-server build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MattIPv4/Personal-Site.git"
  },
  "author": "Matt (IPv4) Cowley",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/MattIPv4/Personal-Site/issues"
  },
  "homepage": "https://github.com/MattIPv4/Personal-Site#readme",
  "devDependencies": {
    "@linthtml/linthtml": "^0.9.4",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.17.16",
    "esbuild-plugin-yaml": "^0.0.1",
    "eslint": "^8.38.0",
    "html-minifier": "^4.0.0",
    "html5-to-pdf": "^4.0.1",
    "http-server": "^14.1.1",
    "markdown-it": "^13.0.1",
    "nodemon": "^2.0.22",
    "posthtml": "^0.16.6",
    "posthtml-expressions": "^1.11.0",
    "posthtml-extend": "^0.6.5",
    "posthtml-include": "^1.7.4",
    "posthtml-style-expansion": "^0.2.0",
    "sass": "^1.62.0",
    "sharp": "^0.32.0",
    "stylelint": "^15.4.0",
    "stylelint-config-standard-scss": "^8.0.0",
    "yaml": "^2.2.1"
  }
}
